{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "ES2022",
    "target": "ES2020",
    "lib": ["ES2023"],
    "outDir": "build",
    "inlineSourceMap": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "verbatimModuleSyntax": true
  }
}
